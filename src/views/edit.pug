extends base.pug

block content 
    h4 Change Title of video
    //POST는 파일을 보내거나 DataBase에 있는 값 또는 데이터 바꾸는 뭔가를 보낼때 사용함=> 로그인때도 사용함
    form(method="POST")
        input(name="title", placeholder="Video Title", value=video.title, required)         
        input(placeholder="Description", required, type="text", name = "description", minlength=5, maxlength = 140, value=video.description)
        input(placeholder="Hashtags, separated by comma.", required, type="text", name = "hashtags", value=video.hashtags.join())
        input(value="Save", type="submit")   

